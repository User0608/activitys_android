<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/txttitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/imgimagen"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/imagen"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ibtnitunes"
                android:background="@drawable/itunes"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                />

            <ImageButton
                android:id="@+id/ibtnreddit"
                android:background="@drawable/reddit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                />

            <ImageButton
                android:id="@+id/ibtnwhatsapp"
                android:background="@drawable/whatsapp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center|bottom"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txvautor"
                android:text="Kevin saucedo "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                />
            <TextView
                android:id="@+id/txvabout"
                android:text=" About"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>